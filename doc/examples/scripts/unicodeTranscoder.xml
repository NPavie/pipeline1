<taskScript version="1.0">
	<name>Unicode Transcoder</name>
	<description>Transcode between charactersets, optionally perform unicode character to replacement string substitution using external tables.</description>
	
	<task name="int_daisy_unicodeTranscoder" interactive="false">

		<parameter>
			<name>inXML</name>
			<value>D:/in-dtbook.xml</value>
		</parameter>
					
		<parameter id="id1">
			<name>outDir</name>
			<value>d:/transcode-dtb-out/</value>
		</parameter>		
				
		<parameter>
			<name>translationTable</name>
			<value>d:/UserTable.txt</value>
		</parameter>

		<parameter>
			<name>outputEncoding</name>
			<value>us-ascii</value>
		</parameter>

		<parameter>
			<name>fallbackToUCD</name>
			<value>false</value>
		</parameter>		
		
				
	</task>

</taskScript>
