<taskScript version="1.0">
	<name>Unicode Transcoder</name>
	<description>Transcode all XML members of a fileset to UTF-8</description>
	
	<task name="int_daisy_unicodeTranscoder" interactive="false">

		<parameter id="input">
			<name>input</name>
			<value>D:/in-dtbook.xml</value>
		</parameter>
					
		<parameter id="output">
			<name>output</name>
			<value>d:/transcode-dtb-out/</value>
		</parameter>		
				
		<parameter>
			<name>outputEncoding</name>
			<value>utf-8</value>
		</parameter>
						
	</task>

</taskScript>
