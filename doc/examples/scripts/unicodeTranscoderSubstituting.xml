<taskScript version="1.0">
	<name>Unicode Transcoder - substituting</name>
	<description>Transcode all XML members of a fileset to utf-8, and perform unicode character-to-replacementstring substitution using external table(s) and non-spacing mark removal.</description>
	
	<task name="int_daisy_unicodeTranscoder" interactive="false">

		<parameter id="input">
			<name>input</name>
			<value>D:/documents/workspace/dmfc/doc/examples/input/multi-language-unicode.html</value>
			<!--  <value>D:\temp\fileset_tests\202_dtb_1\ncc.html</value> -->
		</parameter>
					
		<parameter id="output">
			<name>output</name>
			<value>d:/transcode-out/</value>
		</parameter>		
				
		<parameter>
			<name>performCharacterSubstitution</name>
			<value>true</value>
		</parameter>
		
		<parameter>
			<name>excludeFromSubstitution</name>
			<value>us-ascii</value>
		</parameter>
				
		<parameter>
			<name>substitutionTables</name>
			<value>D:/documents/workspace/dmfc/transformers/int_daisy_unicodeTranscoder/example-table.xml</value>
		</parameter>

		<parameter>
			<name>outputEncoding</name>
			<value>utf-8</value>
		</parameter>

		<parameter>
			<name>fallbackToNonSpacingMarkRemovalTransliteration</name>
			<value>true</value>
		</parameter>

		<parameter>
			<name>fallbackToLatinTransliteration</name>
			<value>false</value>
		</parameter>

		<parameter>
			<name>fallbackToUCD</name>
			<value>false</value>
		</parameter>		
		
				
	</task>

</taskScript>
