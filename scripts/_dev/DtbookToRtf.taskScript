<?xml version="1.0" encoding="utf-8"?>

<taskScript version="2.0" name="DtbookToRtf">
 <nicename>DTBook to RTF</nicename>
 <description>Convert a DTBook document to RTF</description>
 <documentation uri="../../../doc/scripts/DTBookToRtf.html" />
 <comment />
 
 <parameter name="input" value="" required="true">
  <nicename>Input DTBook</nicename>
  <description>Select input DTBook file</description>
  <datatype>
   <file mime="application/x-dtbook+xml" type="input" />
  </datatype>
 </parameter>
 
 <parameter name="output" value="" required="true">
  <nicename>Output RTF</nicename>
  <description>Select the output RTF file</description>
  <datatype>
   <file mime="application/rtf" type="output" />
  </datatype>
 </parameter>
	 
 <task name="dk_dbb_dtbook2rtf" interactive="false">	
	<parameter>
		<name>xml</name>
		<value>${input}</value>
	</parameter>					
	<parameter>
		<name>out</name>
		<value>${output}</value>			
	</parameter>				
  </task>		
	
</taskScript>