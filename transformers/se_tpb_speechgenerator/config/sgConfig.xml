<?xml version="1.0" encoding="utf-8"?>
<sgConfig>

	<!-- Vad behöver vara konfigurerbart till detta program? -->
	<!-- 
	"måste-element"
	Element som _alltid_ antingen själva är synkpunkt (om det inte innehåller ett "måste")
		eller har ett (barn)*barn som är synkpunkt.
	Namn för attribut som innebär annonsering
	Vid vilka element ska ljudet mergas? Headings? Hur blir det i så fall med hd? bara "level/hd"?
	-->

	<absoluteSynch>
		<item>pagenum</item>
		<item>noteref</item>
		<item>annoref</item>
		<item>linenum</item>
	</absoluteSynch>
	
	<containsSynch>
		<item>sent</item>
	</containsSynch>
	
	<announceAttributes>
		<item id="before" uri="http://www.example.com" prefix="annon" local="before"/>
		<item id="after" uri="http://www.example.com" prefix="annon" local="after"/>
	</announceAttributes>
	
	<mergeAudio>
		<item>h1</item>
		<item>h2</item>
		<item>h3</item>
		<item>h4</item>
		<item>h5</item>
		<item>h6</item>
		<item>level/hd</item>
	</mergeAudio>
	
	<silence>
		<afterLast>2000</afterLast>
		<afterFirst>800</afterFirst>
		<beforeAnnouncement>300</beforeAnnouncement>
		<afterAnnouncement>300</afterAnnouncement>
		<afterRegularPhrase>200</afterRegularPhrase>
	</silence>
	
</sgConfig>